.home
  box-sizing border-box
  width 100%
  height 100%
  padding 60px 60px 0
  header
    h2
      outline none
      &:focus
        box-shadow 0 0 0 2px rgba(24, 144, 255, 0.2)
        border-color #40a9ff
  main
    .target
      border 1px solid rgba(0, 0, 0, 0.32)
      margin-bottom 20px
      .title
        height 40px
        line-height 40px
        font-size 20px
        // border-bottom 1px solid rgba(0, 0, 0, 0.32)
        .icon
          color #1890ff
          margin-left 20px
          margin-right 10px
      .put
        margin 10px 30px 0 32px
      .row
        .out
          display flex
          justify-content space-between
          align-items center
          position relative
          cursor pointer
          height 41px
          padding-right 32px
          .task-icon
            position relative
            width 32px
            height 41px
            padding 0 8px
            display flex
            justify-content center
            align-items center
            visibility hidden
          &:hover
            .task-icon
              visibility visible
          .index
            display flex
            justify-content space-between
            align-items center
            position relative
            z-index 75
            height 41px
            // border-bottom 1px solid rgba(0, 0, 0, 0.32)
            flex 1
            &:hover
              background #f9f9f9
              .more
                display block
            &:focus
              background #494bbf
            .index-title
              width 600px
              display flex
              align-items center
              height 100%
              flex-shrink 0
              color #333333
              position relative
              border-top 1px solid #ebecf0
              // border-bottom 1px solid #ebecf0
              .i-icon-write
                display flex
                align-items center
                height 22px
                &:hover
                  color #000
            .index-title-input
              display none
              position relative
              height 100%
              width 600px
          .arrow
            position absolute
            left -45px
            height 41px
            line-height 41px
          i
            display inline-block
            width 8px
            height 8px
            border-radius 10px
            background #1890ff
            margin-right 10px
      .down
        height 40px
        line-height 40px
        margin-left 50px
        .ant-btn
          margin-right 10px
  footer
    height 40px
    line-height 40px
    padding-left 20px
    border 1px dashed rgba(0, 0, 0, 0.32)
    div
      cursor pointer
