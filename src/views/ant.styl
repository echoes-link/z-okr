.ant-input
  &:focus, &:hover
    border-color #494bbf
    box-shadow none
.ant-modal-wrap
  display flex
  justify-content center
  align-items center
  .ant-modal
    width 520px
    min-height 244px
    border-radius 8px
    padding-bottom 0
    box-sizing border-box
    display flex
    flex-direction column
    justify-content space-between
    outline none
    .ant-modal-body
      padding 64px 32px 24px
      display flex
      align-items flex-start
    .ant-modal-footer
      padding 0 32px 32px
      display flex
      justify-content flex-end
      align-items center
      border-top none
      .ant-btn
        height 40px
        max-width 88px
        min-width 88px
        border-radius 4px
        padding 0 16px
        border 1px solid hsla(0, 0%, 80%, 0.7)
        color rgba(0, 0, 0, 0.85)
        background #fff
        &:hover
          background hsla(0, 0%, 80%, 0.1)
      .ant-btn-primary
        background #494bbf
        color #fff
        &:hover
          background rgba(73, 75, 191, 0.85)
.ant-popover
  padding-top 5px
  left 60px !important
  .ant-popover-arrow
    display none
  .ant-popover-inner
    // padding 6px 0
    border-radius 4px
    box-shadow 0 10px 10px 0 rgba(51, 51, 51, 0.06)
    border 1px solid #ebecf0
  .ant-popover-inner-content
    padding 6px 0
    .tippy
      padding 0 8px
      max-width 350px
      width 240px
      .tippy-item
        display flex
        align-items center
        padding 10px 6px
        caret-color #494bbf
        cursor pointer
        &:hover
          background #f3f3f3
        div
          height 19px
          display flex
          align-items center
        .i-icon
          display flex
          margin-right 10px
    .split
      width 100%
      padding 6px 0
      &::after
        content ''
        display block
        height 1px
        background #ebecf0
